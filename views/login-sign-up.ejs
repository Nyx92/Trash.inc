<%- include('nav'); -%>

<div class="login-signup-page">

<div class = "form-banner">
  <p class = "form-banner-text" > Join Us</p>
</div>

<!-- login page content -->
<div class = "login-page">

  <!-- login brand content -->
  <div class = "login-brand">
    <h1>Trash.inc</h1>
    <p>Trash.inc helps you to save the world, one trash a time!</p>
  </div>
  <!-- End of login brand content -->

  <!-- login form container-->
  <div class = "login-form-container">
    <form action="/login" method="POST">
      <label for="email"></label>
      <input type="email" id="email" name="email" placeholder="Email*"/>
      <label for="password"></label>
      <input type="password" id="password" name="password" minlength="8" placeholder="Password*"/>
      <input type="submit" value="Login" class ="login-button" />
      </form>
      <div class = "forgot-password"><a href="">Forgotten password?</a></div>
      <button class="create-account-button">Create New Account</button>
  <!-- End of login-form-container -->
  </div>
<!-- End of login-page -->
</div>


  <div class= "sign-up-form">
    <div class = "sign-up-form-container">
      <div class="close">+</div>
    <div> <h1>CREATE YOUR ACCOUNT</h1> <p>We hope you can join our cause</p></div>
    <form action="/sign-up" method="POST">
      <p>Particulars</p>
      <label for="name"></label>
      <input type="text" id="name" name="name" placeholder="Name*" required/>
      <label for="mobile"></label>
      <input type="tel" id="mobile" name="mobile" placeholder="Mobile*" required/>
      <label for="email"></label>
      <input type="email" id="email" name="email" placeholder="Email*" required/>
      <p>Address</p>
      <label for="street"></label>
      <input type="text" id="street" name="street" placeholder="Street*" required/>
      <label for="block"></label>
      <input type="number" id="block" name="block" placeholder="Block*" required/>
      <label for="unit"></label>
      <input type="text" id="unit" name="unit" placeholder="Unit*" required/>
      <label for="postal"></label>
      <input type="text" id="postal" name="postal" placeholder="Postal code*" required/>
      <p>Login Details </p>
      <label for="password"></label>
      <input type="password" id="password" name="password" minlength="8" placeholder="Password*" required/>
      <p>Profile Pic </p>
      <!-- <label for="image"></label>
      <input type="file" id="image" name="image"/> -->
      <input class="submit-button" type="submit" value="Submit" />
      <p>By proceeding, I agree to XXX's <a class = "terms-conditions" href="">Terms & Conditions.</a></p>
    </form>
    <!-- end of sign-up-form-container -->
    </div>
    <!-- end of sign-up-form -->
  </div>

    <!-- end of login-signup-page -->
  </div>

  </body>

  <script>
    document.querySelector(".create-account-button").addEventListener('click', function(){
      document.querySelector('.sign-up-form').style.display = "flex";
    })

     document.querySelector(".close").addEventListener('click', function(){
      document.querySelector('.sign-up-form').style.display = "none";
    })


  </script>

</html>


