<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css" />
    <title>BIRDING</title>
  </head>
  <body>
    <!-- start of nav bar -->
    <!-- .navbar-expand-xl|lg|md|sm (stacks the navbar vertically on extra large, large, medium or small screens). -->
    <nav
      class="navbar navbar-expand-lg navbar-dark d-flex justify-content-start align-items-center"
    >
      <!-- BIRD -->
      <div class="Bird">
        <img class="bird-pic" src="/images.png" alt="bird-pic" />
      </div>
      <!-- links -->
      <div><p class="nav-word">Nav:</p></div>
      <div class="nav-links">
        <a class="new-note-form" href="http://localhost:3004/note">
          New Note |</a
        >
        <a class="bird-list" href="http://localhost:3004/home"> Home |</a>
        <a class="sign-up" href="http://localhost:3004/signup"> Sign Up | </a>
        <a class="login" href="http://localhost:3004/login"> Login | </a>
        <a class="logout" href="http://localhost:3004/logout"> Logout |</a>
        <a class="species-list" href="http://localhost:3004/species/all">
          Species List |
        </a>
        <a class="new-species" href="http://localhost:3004/species">
          New Species
        </a>
        <% if (user !== undefined) { %>
        <h2 class="username">Welcome: <%= user %></h2>
        <% } %>
      </div>
      <!-- end of nav bar -->
    </nav>

    <!--sightings title -->
    <div class="d-flex justify-content-center mt-3 mb-3">
      <H2>SIGHTINGS!</H2>
    </div>
    <!-- end of-sightings title -->
  </body>
</html>
